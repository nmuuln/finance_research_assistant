# GCP / Discovery Engine (Deep Research) config
PROJECT_ID=your-gcp-project-id
GDR_APP_ID=your-gdr-app-id
GDR_DATA_STORE_ID=        # optional; leave blank if not using a Vertex AI Search datastore
GDR_LOCATION=       # usually "global"
GDR_COLLECTION=your-gdr-collection-id
GDR_ASSISTANT=your-gdr-assistant-id

# Gemini API (for WriterAgent). If using AI Studio:
GOOGLE_API_KEY=your-google-api-key

# Tavily API (for web search)
TAVILY_API_KEY=your-tavily-api-key

# Academic Search APIs (for literature review)
# Semantic Scholar: Optional API key for higher rate limits (free tier: 100 req/5min)
SEMANTIC_SCHOLAR_API_KEY=
# OpenAlex: Optional email for "polite pool" with higher rate limits
OPENALEX_EMAIL=

# Default topic (you can override via CLI arg)
TOPIC=Credit risk transmission from monetary tightening to SME default rates (2019â€“2025, emerging markets)

# ====================================================================
# DigitalOcean Spaces Configuration (S3-compatible object storage)
# ====================================================================
# Files are stored in: uploads/{session_id}/ and reports/{session_id}/
# If not configured, app falls back to local filesystem storage

SPACES_ACCESS_KEY=YOUR_DO_SPACES_ACCESS_KEY_HERE
SPACES_SECRET_KEY=YOUR_DO_SPACES_SECRET_KEY_HERE
SPACES_REGION=sgp1
SPACES_BUCKET=finance-bucket

# Database path (SQLite)
DATABASE_PATH=data/app.db
